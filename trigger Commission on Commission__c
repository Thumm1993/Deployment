trigger Commission on Commission__c (before insert,after insert,before update,after update) {
    Map<Opportunity__c,Sales_Agent__c> oppSalesAgent = new Map<Opportunity__c,Sales_Agent__c>();
    if(trigger.isAfter) {
        
        for(Commission__c c:Trigger.New){
            
            if(c.Opportunity__c!=null && c.Sales_Agent__c!=null){
                
                oppSalesAgent.put(Opportunity__c,Sales_Agent__c);
                
            }   
            
        }
        
        
        
    }
    
    

}
